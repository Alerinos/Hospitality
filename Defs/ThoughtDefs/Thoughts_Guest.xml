<?xml version="1.0" encoding="utf-8" ?>
<ThoughtDefs>

  <ThoughtDef>
    <defName>GuestConvinced</defName>
    <thoughtClass>Thought_MemorySocial</thoughtClass>
    <durationDays>1.6</durationDays>
    <stackedEffectMultiplier>1.0</stackedEffectMultiplier>
    <stackLimit>30</stackLimit>
    <stages>
      <li>
        <label>convinced by recruitment attempt</label>
        <labelSocial>convinced me</labelSocial>
        <description>That colonist and I had a talk about the colony. It sounds like a good place...</description>
        <baseMoodEffect>1</baseMoodEffect>
        <baseOpinionOffset>3.5</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>GuestOffended</defName>
    <thoughtClass>Thought_MemorySocial</thoughtClass>
    <durationDays>1.6</durationDays>
    <stackedEffectMultiplier>1.0</stackedEffectMultiplier>
    <stackLimit>30</stackLimit>
    <stages>
      <li>
        <label>offended by recruitment attempt</label>
        <labelSocial>offended me</labelSocial>
        <description>That colonist tried to recruit me. But I don't want to leave my faction!</description>
        <baseMoodEffect>-1.5</baseMoodEffect>
        <baseOpinionOffset>-2</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>GuestAngered</defName>
    <thoughtClass>Thought_MemorySocial</thoughtClass>
    <durationDays>0.75</durationDays>
    <stackedEffectMultiplier>0.98</stackedEffectMultiplier>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>angered by seeing recruitment</label>
        <labelSocial>angered me by recruiting</labelSocial>
        <description>These guys are trying to steal our members!</description>
        <baseMoodEffect>-10</baseMoodEffect>
        <baseOpinionOffset>-20</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>
  
    <ThoughtDef>
    <defName>GuestOffendedRelationship</defName>
    <thoughtClass>Thought_MemorySocial</thoughtClass>
    <durationDays>1.6</durationDays>
    <stackedEffectMultiplier>0.98</stackedEffectMultiplier>
    <stackLimit>40</stackLimit>
    <stages>
      <li>
        <label>insulted by colonist</label>
        <labelSocial>insulted me</labelSocial>
        <description>These guys are losers!</description>
        <baseMoodEffect>-2</baseMoodEffect>
        <baseOpinionOffset>-1.5</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>

    <ThoughtDef>
    <defName>GuestPleasedRelationship</defName>
    <thoughtClass>Thought_MemorySocial</thoughtClass>
    <durationDays>1.6</durationDays>
    <stackedEffectMultiplier>0.98</stackedEffectMultiplier>
    <stackLimit>40</stackLimit>
    <stages>
      <li>
        <label>charmed by colonist</label>
        <labelSocial>charmed me</labelSocial>
        <description>Such nice people!</description>
        <baseMoodEffect>3</baseMoodEffect>
        <baseOpinionOffset>2.5</baseOpinionOffset>
     </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>GuestDismissiveAttitude</defName>
    <durationDays>0.05</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>tired of talking</label>
        <description>I'm done talking for now.</description>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>GuestBedCount</defName>
    <workerClass>Hospitality.ThoughtWorker_Beds</workerClass>
    <nullifyingTraits>
      <li>Masochist</li>
      <li>Ascetic</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>no guest beds</label>
        <description>They don't even have beds here.</description>
        <baseMoodEffect>-15</baseMoodEffect>
      </li>
      <li>
        <label>not enough guest beds</label>
        <description>There should be more beds in our room.</description>
        <baseMoodEffect>-7</baseMoodEffect>
      </li>
      <li>
        <label>enough beds</label>
        <description>There are enough beds in our room for all of us.</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
      <li>
        <label>lots of beds</label>
        <description>Wow, so many beds!</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>


</ThoughtDefs>